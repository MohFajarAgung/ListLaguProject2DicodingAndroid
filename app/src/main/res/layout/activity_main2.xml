<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back_button"
        android:layout_marginStart="16dp"
        android:src="@drawable/backarrow"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/bagian_atas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/photo"
            android:layout_width="200dp"
            android:layout_height="400dp"
            android:src="@drawable/nadinamizah" />
    </LinearLayout>

    <TextView
        android:id="@+id/judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="25dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/bagian_atas"
        android:text="@string/app_name"
        />
   <TextView
       android:id="@+id/genre"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@+id/judul"
       android:paddingHorizontal="16dp"
       android:paddingBottom="16dp"
       android:text="@string/app_name"
       />
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/textlirik"
        android:textSize="25dp"
        android:textStyle="bold"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp"
        android:text="@string/lirik"
        app:layout_constraintTop_toBottomOf="@+id/genre"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/lyrics"
        android:lineSpacingMultiplier="2.0"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/app_name"
        android:paddingHorizontal="14dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textlirik"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>